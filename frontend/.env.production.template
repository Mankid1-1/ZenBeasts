# ZenBeasts Frontend Production Environment Configuration
# Copy this file to .env.production and fill in the values

# ============================================================================
# Network Configuration with Redundancy (Requirement 23.3)
# ============================================================================

# Primary Solana Network
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Primary RPC Endpoint
NEXT_PUBLIC_RPC_ENDPOINT="https://api.devnet.solana.com" # Recommend using Helius/Ankr for stability

# Backup RPC Endpoints for redundancy
NEXT_PUBLIC_RPC_URL_BACKUP=https://rpc.ankr.com/solana
NEXT_PUBLIC_RPC_URL_TERTIARY=https://mainnet.helius-rpc.com

# Optional: Helius API key for enhanced RPC performance
# Get your key at: https://www.helius.dev/
NEXT_PUBLIC_HELIUS_API_KEY=

# ============================================================================
# Program Configuration
# ============================================================================

# ZenBeasts Program ID (deployed on mainnet)
NEXT_PUBLIC_PROGRAM_ID=

# ZEN Token Mint Address
NEXT_PUBLIC_ZEN_MINT=

# ============================================================================
# API Backend Configuration
# ============================================================================

# API Backend URL
NEXT_PUBLIC_API_URL=https://api.zenbeasts.io

# API Backup URL (optional)
NEXT_PUBLIC_API_URL_BACKUP=https://api-backup.zenbeasts.io

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_BREEDING=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# Performance Configuration
# ============================================================================

# Cache TTL in seconds
NEXT_PUBLIC_CACHE_TTL=300

# WebSocket subscription timeout in ms
NEXT_PUBLIC_WS_TIMEOUT=30000

# Transaction confirmation timeout in ms
NEXT_PUBLIC_TX_TIMEOUT=60000

# ============================================================================
# Mobile Configuration (Requirements 21.1, 21.2, 21.3)
# ============================================================================

# Enable mobile wallet deep linking
NEXT_PUBLIC_ENABLE_MOBILE_WALLETS=true

# Mobile app scheme (for deep linking)
NEXT_PUBLIC_APP_SCHEME=zenbeasts

# ============================================================================
# Analytics and Monitoring
# ============================================================================

# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Security
# ============================================================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# Rate limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000
