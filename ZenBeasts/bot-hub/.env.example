# ============================================================================
# ZenBeasts Bot Hub - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Discord Bot Configuration
# ----------------------------------------------------------------------------
# Get these from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_CLIENT_ID=your_client_id_here

# Discord Features
DISCORD_COMMAND_PREFIX=!
DISCORD_ENABLE_LEVELING=true
DISCORD_ENABLE_MODERATION=true

# ----------------------------------------------------------------------------
# Twitter Bot Configuration
# ----------------------------------------------------------------------------
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Twitter Features
TWITTER_ENABLE_AUTO_POST=true
TWITTER_ENABLE_AUTO_REPLY=true
TWITTER_ENABLE_GROWTH=false
TWITTER_POST_INTERVAL=14400  # 4 hours in seconds

# ----------------------------------------------------------------------------
# OpenAI Configuration (for AI-generated content)
# ----------------------------------------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Anthropic Configuration (alternative to OpenAI)
# ----------------------------------------------------------------------------
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# ----------------------------------------------------------------------------
# Redis Configuration (caching and session storage)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# PostgreSQL Configuration (optional, for analytics)
# ----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=zenbeasts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/zenbeasts

# ----------------------------------------------------------------------------
# Bot Hub Settings
# ----------------------------------------------------------------------------
BOT_HUB_PORT=5000
BOT_HUB_HOST=0.0.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENVIRONMENT=development  # development, staging, production

# ----------------------------------------------------------------------------
# Webhook URLs (for notifications and alerts)
# ----------------------------------------------------------------------------
# Discord webhook for general notifications
WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Discord webhook for error alerts
ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/your_error_webhook_url_here

# Slack webhook (optional)
SLACK_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# Solana Configuration
# ----------------------------------------------------------------------------
# RPC endpoints
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet  # devnet, mainnet-beta
HELIUS_API_KEY=your_helius_api_key_here

# Program IDs (update these after deployment)
NFT_FACTORY_PROGRAM_ID=
ACTIVITIES_PROGRAM_ID=
ECONOMY_PROGRAM_ID=

# Wallet configuration (for bot operations)
SOLANA_WALLET_PRIVATE_KEY=
TREASURY_WALLET_ADDRESS=

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_generate_a_random_one
JWT_SECRET=your_jwt_secret_here_generate_a_random_one
API_KEY=your_api_key_here

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://zenbeasts.io

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------
# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Datadog (APM)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ----------------------------------------------------------------------------
# Email Configuration (for alerts and reports)
# ----------------------------------------------------------------------------
# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@zenbeasts.io

# Mailchimp (newsletter)
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=

# ----------------------------------------------------------------------------
# Content & Media
# ----------------------------------------------------------------------------
# IPFS/Arweave for NFT metadata
PINATA_API_KEY=
PINATA_SECRET_KEY=
ARWEAVE_WALLET_PATH=

# CDN
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# ----------------------------------------------------------------------------
# Bot-Specific Settings
# ----------------------------------------------------------------------------

# Content Bot
CONTENT_BOT_ENABLED=false
CONTENT_DAILY_THREADS=3
CONTENT_TOPICS=solana,nft,gaming,crypto

# Analytics Bot
ANALYTICS_BOT_ENABLED=false
ANALYTICS_REPORT_SCHEDULE=0 8 * * *  # Daily at 8 AM (cron format)

# Deployment Bot
DEPLOYMENT_BOT_ENABLED=false
DEPLOYMENT_AUTO_DEPLOY=false

# Monitoring Bot
MONITORING_BOT_ENABLED=true
MONITORING_CHECK_INTERVAL=60  # seconds
MONITORING_ALERT_THRESHOLD=5  # errors before alerting

# Rewards Bot
REWARDS_BOT_ENABLED=false
REWARDS_DISTRIBUTION_SCHEDULE=0 0 * * 0  # Weekly on Sunday (cron format)

# Marketing Bot
MARKETING_BOT_ENABLED=false
MARKETING_CAMPAIGN_BUDGET=100  # USD

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# API-specific rate limits
TWITTER_RATE_LIMIT=300  # tweets per 3 hours
DISCORD_RATE_LIMIT=50   # messages per minute
OPENAI_RATE_LIMIT=60    # requests per minute

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_AUTO_MODERATION=true
FEATURE_AI_CONTENT=true
FEATURE_VOICE_TRACKING=false
FEATURE_GIVEAWAYS=true
FEATURE_ANALYTICS_DASHBOARD=false

# ----------------------------------------------------------------------------
# Scheduled Tasks (cron format)
# ----------------------------------------------------------------------------
# Format: minute hour day_of_month month day_of_week
SCHEDULE_DAILY_REPORT=0 8 * * *
SCHEDULE_WEEKLY_SUMMARY=0 9 * * 1
SCHEDULE_BACKUP=0 2 * * *
SCHEDULE_CLEANUP=0 3 * * 0

# ----------------------------------------------------------------------------
# Advanced Settings
# ----------------------------------------------------------------------------
# Worker settings
MAX_WORKERS=10
WORKER_TIMEOUT=300  # seconds

# Cache settings
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000  # items

# Database settings
DB_POOL_SIZE=5
DB_TIMEOUT=30  # seconds
DB_AUTO_MIGRATE=true

# Logging
LOG_ROTATION_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Performance
ENABLE_PROFILING=false
SLOW_QUERY_THRESHOLD=1.0  # seconds

# ----------------------------------------------------------------------------
# Testing & Development
# ----------------------------------------------------------------------------
TEST_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_MIGRATIONS=false

# Test data
TEST_DISCORD_CHANNEL_ID=
TEST_TWITTER_USER_ID=

# ----------------------------------------------------------------------------
# Backup & Recovery
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Cloud backup (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# 1. Never commit the .env file to version control
# 2. Keep production secrets in a secure vault (e.g., AWS Secrets Manager)
# 3. Rotate keys regularly
# 4. Use strong, unique passwords for each service
# 5. Enable 2FA on all accounts
# 6. Review and update this configuration periodically
#
# For more information, see: https://github.com/zenbeasts/docs
# ============================================================================
